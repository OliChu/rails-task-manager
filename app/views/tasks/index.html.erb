<div class="container">
  <div class="wrapper">
    <div class="content">
      <h1>Tasks list</h1>
      <ul>
        <% @tasks.each do |task| %>
          <li><%= task.name %>
              <%= link_to 'Details', task_path(task) %>
              <%= link_to 'Edit', edit_task_path(task) %>
              <%= link_to 'Delete', task_path(task), method: :delete %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'New', new_task_path %>
    </div>
  </div>
</div>


